<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title><%= title %></title>
</head>

<body>
<nav>
  <a href="flights/new">add new flight</a>
</nav>

  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs</th>
        <th>Arrival</th>
        <th>Destination</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(item) { %>
      <tr>
        <td>
          <%= item.airline %>
        </td>
        <td>
          <%= item.airport %>
        </td>
        <td>
          <%= item.flightNo %>
        </td>
        <td>
          <%= item.departs %>
        </td>
        <td>
          <%= item.arrival %>
        </td>
        <td>
          <%= item.destination %>
        </td>
        <td><a href="/flights/<%= item._id %>">flight details</a>
          <form action="/flights/<%=item.id%>?_method=DELETE" method="POST">
            <input type="submit" value="Remove" />
            </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</body>

</html>