<%- include('../partials/header') %>
<h1>All Flights</h1>
    <table>
      <thead>
          <tr>
              <th>Airline</th>
              <th>Flight Number</th>
              <th>Departs</th>
          </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f, i) { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.flightNo %></td>
                <% if (new Date()> f.departs ) {%>
                    <td style="color:red"><%= f.departs %></td>
                <% } else { %>
                    <td><%= f.departs %></td>
                <% } %>
                <td><a href="/flights/<%=f._id %>"> details</a></td>
            </tr>
        <% }); %>
      </tbody>
  </table>
<%- include('../partials/footer') %>